    <script type="text/javascript">
        $(document).ready(function() {
            $(".add-row").click(function() {
                $("#table1 tbody").find('input[name="record"]').each(function() {
                    //console.log('test');
                    if ($(this).is(":checked")) {
                        var index = $(this).attr("id");
                        var UID = $('#UID' + index).attr("value");
                        var first = $('#first' + index).attr("value");
                        // console.log(first);
                        var last = $("#last" + index).attr("value");
                        //console.log(last);
                        var hidden = $('#hidden' + index).attr("value");
                        var markup = "<tr><td><input type='checkbox' name='record' id=" + index + "></td><td id= UID" + index + " value=" + UID + ">" + UID + "</td><td id= first" + index + " value=" + first + ">" + first + "</td><td id= last" + index + " value=" + last + ">" + last + "</td><td id= hidden" + index + " value=" + hidden + " style='visibility:collapse'>" + hidden + "</td></tr>";
                        $("#table2 tbody").append(markup);
                        $(this).parents("tr").remove();
                    }
                });
                /*console.log("Test");
                var name = $("#name").val();
                var email = $("#email").val();
                var markup = "<tr><td><input type='checkbox' name='record'></td><td>" + name + "</td><td>" + email +
                  "</td></tr>";
                $("table tbody").append(markup);*/
            });

            // Find and remove selected table rows
            $(".delete-row").click(function() {
                $("#table2 tbody tr").find('input[name="record"]').each(function() {
                    if ($(this).is(":checked")) {
                        var index = $(this).attr("id");
                        var UID = $('#UID' + index).attr("value");
                        var first = $('#first' + index).attr("value");
                        // console.log(first);
                        var last = $("#last" + index).attr("value");
                        //console.log(last);
                        var hidden = $('#hidden' + index).attr("value");
                        var markup = "<tr><td><input type='checkbox' name='record' id=" + index + "></td><td id= UID" + index + " value=" + UID + ">" + UID + "</td><td id= first" + index + " value=" + first + ">" + first + "</td><td id= last" + index + " value=" + last + ">" + last + "</td><td id= hidden" + index + " value=" + hidden + ">" + hidden + "</td></tr>";
                        $("#table1 tbody").append(markup);
                        $(this).parents("tr").remove();


                    }
                });
            });

            $("#toJSON").click(function() {

                var table = JSON.stringify($('#table2').tableToJSON({
                    ignoreColumns: [0, 2, 3]
                }));
                var table2 = JSON.stringify($('#table2').tableToJSON({
                    ignoreColumns: [0, 2, 3, 4]
                })); // 

                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/AssignGroupJSON', true);
                xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
                xhr.onload = function() {
                    console.log(xhr.responseText);
                };

                xhr.onreadystatechange = function() {
                    if (xhr.readyState > 2) {
                        var respData = xhr.responseText;
                        if(respData == "OK"){
                            console.log("Hi");
                            back();
                        }
                    }
                };


                xhr.send("table=" + table + "&table2=" + table2);

            });
            
            function back() {
                console.log("Hi")

               var button = document.getElementById('back');
                button.click();

            };



        });

    </script>
