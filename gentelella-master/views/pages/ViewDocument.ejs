<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <!-- Meta, title, CSS, favicons, etc. -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>View Document Page </title>

  <!-- Bootstrap -->
  <link href="assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <!-- NProgress -->
  <link href="assets/vendors/nprogress/nprogress.css" rel="stylesheet">

  <!-- Custom styling plus plugins -->
  <link href="assets/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="nav-md">
  <div class="container body">
    <div class="main_container">

      <% include ./nav %>

      <!-- page content -->
      <div class="right_col" role="main">
        <div class="">
          <div class="page-title">
            <div class="title_left">
              <h3> Documents </h3>
            </div>
          </div>

          <div class="clearfix"></div>

          <div class="row">
            <div class="col-md-12">
              <div class="x_panel">

                <div class="x_content">

                  <div class="row">

                    <% for (var doc of data) { 
                      var filext = 0;
                      var imgtype = '';
                      var x = doc.Document_Ext;
                      
                    switch(x){ 
                    case ".docx": 
                      filext = 1
                      imgtype = "images/docx.png"
                      break;
                    case ".doc": 
                      filext = 1
                      imgtype = "images/docx.png"
                      break;
                    case ".odt": 
                      filext = 2
                      imgtype = "images/odt.png"
                      break;
                    case ".pdf": 
                      filext = 3
                      imgtype = "images/pdf.png"
                      break;
                    case ".txt": 
                      filext = 4
                      imgtype = "images/txt.jpg"
                      break;
                    case ".pptx": 
                      filext = 5
                      imgtype = "images/pptx.png"
                    case ".mp4": 
                      filext = 6
                      imgtype = "images/mp4.png"
                    case ".m4a": 
                      filext = 6
                      imgtype = "images/mp4.png"
                    case ".7z": 
                      filext = 7
                      imgtype = "images/zip.png"
                    case ".rar": 
                      filext = 7
                      imgtype = "images/zip.png"
                    case ".zip": 
                      filext = 7
                      imgtype = "images/zip.png"
                    break;
                      default:
                      filext = 0
                      break;
                    } 
                    %>




                    <div class="col-md-55">
                      <div class="thumbnail">
                        <div class="image view view-first">
                          <% if (filext == "0"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= doc.Document_Route %>" />
                          <% } if (filext == "1"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= imgtype %>" />
                          <% } if (filext == "2"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= imgtype %>" />
                          <% } if (filext == "3"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= imgtype %>" />
                          <% } if (filext == "4"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= imgtype %>" />
                          <% } if (filext == "5"){ %>
                          <img style="width: 100%;height: 100%; display: block;" src="<%= imgtype %>" />
                          <% } %>

                          <div class="mask no-caption">
                            <div class="tools tools-bottom">
                              <a href="<%= doc.Document_Route %>" download><i class="fa fa-download"></i></a>
                              <a href="#"><i class="fa fa-pencil"></i></a>
                              <a href="#"><i class="fa fa-times"></i></a>
                            </div>
                          </div>
                        </div>
                        <div class="caption">
                          <p><strong><%= doc.Document_Name %> <%= doc.Document_Ext %></strong></p>
                          <p><%= doc.Document_Desc %></p>
                        </div>
                      </div>
                    </div>

                    <% } %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /page content -->

      <!-- footer content -->
      <footer>
        <div class="pull-right">
          Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
        </div>
        <div class="clearfix"></div>
      </footer>
      <!-- /footer content -->
    </div>
  </div>

  <!-- jQuery -->
  <script src="assets/vendors/jquery/dist/jquery.min.js"></script>
  <!-- Bootstrap -->
  <script src="assets/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
  <!-- FastClick -->
  <script src="assets/vendors/fastclick/lib/fastclick.js"></script>
  <!-- NProgress -->
  <script src="assets/vendors/nprogress/nprogress.js"></script>

  <!-- Custom Theme Scripts -->
  <script src="assets/build/js/custom.min.js"></script>
</body>

</html>